<p>
  <strong>User:</strong>

  <%= @post.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Timestamps:</strong>
  <%= @post.timestamps %>
</p>

<% if (current_user && current_user.id == @post.user_id) %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
